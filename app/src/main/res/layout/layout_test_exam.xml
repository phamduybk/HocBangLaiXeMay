<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_normal"
    android:layout_marginRight="@dimen/padding_normal"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/button_height"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingStart="@dimen/padding_normal">

            <TextView
                android:id="@+id/tv_exam_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/padding_normal"
                android:layout_marginRight="@dimen/padding_normal"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Bộ đề số 1"
                android:textAllCaps="true"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/font_text_small" />

            <ImageView
                android:id="@+id/iv_show_hide_detail"
                android:layout_width="@dimen/button_height"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_arrow_drop_down" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_exam_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingBottom="@dimen/padding_normal"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingRight="@dimen/padding_normal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_view_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/watch_answer"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_text_normal" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>